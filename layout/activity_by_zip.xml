<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#292727"
    tools:context=".by_zip">

    <Button
        android:id="@+id/button"
        android:layout_width="145dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:onClick="getMySlot"
        android:text="@string/view1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/slotData"
        android:layout_width="0dp"
        android:layout_height="500dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="28dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/box"
        android:fontFamily="sans-serif-light"
        android:padding="10sp"
        android:scrollbars="vertical"
        android:text="@string/enter_your_details"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/enter_pincode"
            android:layout_width="155dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/box_input"
            android:drawableStart="@drawable/ic_baseline_pin_drop_24"
            android:drawableLeft="@drawable/ic_baseline_pin_drop_24"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="@string/enter_zip"
            android:importantForAutofill="no"
            android:inputType="numberSigned"
            android:minHeight="48dp"
            android:paddingStart="3sp"
            android:paddingLeft="3sp"
            android:textColorHint="#993C3737"
            android:textSize="16sp"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/enter_date"
            android:layout_width="155dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/box_input"
            android:drawableStart="@drawable/ic_baseline_date_range_24"
            android:drawableLeft="@drawable/ic_baseline_date_range_24"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="@string/enter_date"
            android:importantForAutofill="no"
            android:inputType="date"
            android:minHeight="48dp"
            android:paddingStart="3sp"
            android:paddingLeft="3sp"
            android:textColorHint="#993C3737"
            android:textSize="16sp"
            tools:ignore="TouchTargetSizeCheck" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>